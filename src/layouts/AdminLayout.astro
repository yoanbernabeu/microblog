---
import { getConfig } from '@lib/config';
import '../styles/global.css';

interface Props {
  title: string;
  requireAuth?: boolean;
}

const config = getConfig();
const { title, requireAuth = true } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;

const fullTitle = `${title} - Admin - ${config.site.name}`;
---

<!doctype html>
<html lang={config.site.language} class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <title>{fullTitle}</title>
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}/favicon.svg`} />

    <!-- Theme script -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme');
        if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body class="h-full bg-slate-100 dark:bg-slate-900 transition-colors">
    <div class="min-h-full">
      <!-- Header Admin -->
      <header class="bg-white dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700">
        <div class="max-w-5xl mx-auto px-4 py-3 flex items-center justify-between">
          <div class="flex items-center gap-4">
            <a
              href={baseUrl || '/'}
              class="text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200 transition-colors"
              title="Voir le site"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
            <a href={`${baseUrl}/admin`} class="font-semibold text-slate-900 dark:text-white">
              Admin
            </a>
          </div>

          <nav class="flex items-center gap-2" id="admin-nav">
            <a
              href={`${baseUrl}/admin`}
              class="px-3 py-1.5 text-sm rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors"
            >
              Posts
            </a>
            <a
              href={`${baseUrl}/admin/profile`}
              class="px-3 py-1.5 text-sm rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors"
            >
              Profil
            </a>
            <button
              type="button"
              id="logout-btn"
              class="px-3 py-1.5 text-sm rounded-lg text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors"
            >
              Déconnexion
            </button>
          </nav>
        </div>
      </header>

      <!-- Contenu -->
      <main class="max-w-5xl mx-auto px-4 py-8">
        <slot />
      </main>
    </div>

    {requireAuth && (
      <script define:vars={{ baseUrl }}>
        // Vérifier l'authentification
        if (!sessionStorage.getItem('github_token')) {
          window.location.href = baseUrl + '/admin/login';
        }

        // Bouton de déconnexion
        document.getElementById('logout-btn')?.addEventListener('click', () => {
          sessionStorage.removeItem('github_token');
          sessionStorage.removeItem('github_user');
          window.location.href = baseUrl + '/admin/login';
        });
      </script>
    )}
  </body>
</html>
