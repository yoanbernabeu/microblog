---
import { getConfig } from '@lib/config';
import '../styles/global.css';

interface Props {
  title: string;
  requireAuth?: boolean;
}

const config = getConfig();
const { title, requireAuth = true } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;

const fullTitle = `${title} - Admin - ${config.site.name}`;
---

<!doctype html>
<html lang={config.site.language} class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <title>{fullTitle}</title>
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}/favicon.svg`} />

    <!-- Theme script -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme');
        if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body class="h-full bg-surface-50 dark:bg-surface-950 transition-colors relative">
    <!-- Background pattern -->
    <div class="fixed inset-0 opacity-30 pointer-events-none" style="background-image: linear-gradient(to right, rgba(0,0,0,0.03) 1px, transparent 1px), linear-gradient(to bottom, rgba(0,0,0,0.03) 1px, transparent 1px); background-size: 24px 24px;" aria-hidden="true"></div>

    <div class="min-h-full relative z-10">
      <!-- Header Admin -->
      <header class="bg-white/80 dark:bg-surface-900/80 backdrop-blur-xl border-b border-surface-200/50 dark:border-surface-800/50">
        <div class="max-w-5xl mx-auto px-4 py-3 flex items-center justify-between">
          <div class="flex items-center gap-4">
            <a
              href={baseUrl || '/'}
              class="p-2 text-surface-500 hover:text-white bg-surface-100 dark:bg-surface-800 hover:bg-gradient-to-br hover:from-primary-500 hover:to-accent-500 rounded-lg transition-all duration-300"
              title="Voir le site"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
            <a href={`${baseUrl}/admin`} class="font-bold text-surface-900 dark:text-white flex items-center gap-2">
              <span class="bg-gradient-to-r from-primary-500 to-accent-500 bg-clip-text text-transparent">Admin</span>
            </a>
          </div>

          <nav class="flex items-center gap-1" id="admin-nav">
            <a
              href={`${baseUrl}/admin`}
              class="px-4 py-2 text-sm font-medium rounded-lg text-surface-600 dark:text-surface-400 hover:text-primary-600 dark:hover:text-primary-400 hover:bg-primary-500/10 transition-all duration-200"
            >
              Posts
            </a>
            <a
              href={`${baseUrl}/admin/profile`}
              class="px-4 py-2 text-sm font-medium rounded-lg text-surface-600 dark:text-surface-400 hover:text-primary-600 dark:hover:text-primary-400 hover:bg-primary-500/10 transition-all duration-200"
            >
              Profil
            </a>
            <button
              type="button"
              id="logout-btn"
              class="px-4 py-2 text-sm font-medium rounded-lg text-red-500 hover:text-red-600 hover:bg-red-500/10 transition-all duration-200"
            >
              Quitter
            </button>
          </nav>
        </div>
      </header>

      <!-- Contenu -->
      <main class="max-w-5xl mx-auto px-4 py-8">
        <slot />
      </main>
    </div>

    {requireAuth && (
      <script define:vars={{ baseUrl }}>
        // Verifier l'authentification
        if (!sessionStorage.getItem('github_token')) {
          window.location.href = baseUrl + '/admin/login';
        }

        // Bouton de deconnexion
        document.getElementById('logout-btn')?.addEventListener('click', () => {
          sessionStorage.removeItem('github_token');
          sessionStorage.removeItem('github_user');
          window.location.href = baseUrl + '/admin/login';
        });
      </script>
    )}
  </body>
</html>
