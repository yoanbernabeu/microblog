---

<header class="relative overflow-hidden">
  <!-- Decorative background -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-500/20 via-transparent to-accent-500/20 dark:from-primary-500/10 dark:to-accent-500/10"></div>
  <div class="absolute top-0 left-1/4 w-96 h-96 bg-primary-500/30 rounded-full blur-3xl -translate-y-1/2 dark:bg-primary-500/20"></div>
  <div class="absolute bottom-0 right-1/4 w-64 h-64 bg-accent-500/30 rounded-full blur-3xl translate-y-1/2 dark:bg-accent-500/20"></div>

  <div class="relative max-w-2xl mx-auto px-4 py-12">
    <!-- Profile section -->
    <div class="flex flex-col items-center text-center">
      <!-- Avatar with glow -->
      <a href={baseUrl} class="group relative mb-6">
        <div class="absolute -inset-4 bg-gradient-to-r from-primary-500 via-accent-500 to-primary-500 rounded-full opacity-75 blur-xl group-hover:opacity-100 transition-opacity duration-500 animate-pulse"></div>
        <div class="absolute -inset-1 bg-gradient-to-r from-primary-500 to-accent-500 rounded-full opacity-75 group-hover:opacity-100 transition-opacity"></div>
        <img
          src={config.author.avatar.startsWith('/') ? `${baseUrl}${config.author.avatar}` : config.author.avatar}
          alt={config.author.name}
          class="relative w-24 h-24 rounded-full object-cover border-4 border-white dark:border-surface-900"
          width="96"
          height="96"
        />
      </a>

      <!-- Name with gradient -->
      <h1 class="text-3xl sm:text-4xl font-black tracking-tight mb-2">
        <span class="bg-gradient-to-r from-surface-900 via-surface-700 to-surface-900 dark:from-white dark:via-surface-200 dark:to-white bg-clip-text text-transparent">
          {config.author.name}
        </span>
      </h1>

      <!-- Bio -->
      <p class="text-lg text-surface-600 dark:text-surface-400 max-w-md mb-6 leading-relaxed">
        {config.author.bio}
      </p>

      <!-- Social links + Actions -->
      <div class="flex items-center gap-2 mb-6">
        {socialLinks.map(({ platform, url }) => (
          <a
            href={url}
            target="_blank"
            rel="noopener noreferrer me"
            class="p-3 text-surface-500 hover:text-white bg-surface-100 dark:bg-surface-800 hover:bg-gradient-to-br hover:from-primary-500 hover:to-accent-500 rounded-xl transition-all duration-300 hover:scale-110 hover:shadow-lg hover:shadow-primary-500/25"
            aria-label={platform}
          >
            <Fragment set:html={socialIcons[platform] || ''} />
          </a>
        ))}

        {socialLinks.length > 0 && (
          <div class="w-px h-8 bg-surface-300 dark:bg-surface-700 mx-1"></div>
        )}

        <SearchButton />
        <ThemeToggle />
      </div>

      <!-- Links as pills -->
      {config.links && config.links.length > 0 && (
        <div class="flex flex-wrap justify-center gap-2">
          {config.links.map(({ label, url }) => (
            <a
              href={url}
              target="_blank"
              rel="noopener noreferrer"
              class="group relative px-5 py-2 text-sm font-medium overflow-hidden rounded-full"
            >
              <span class="absolute inset-0 bg-gradient-to-r from-primary-500 to-accent-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
              <span class="absolute inset-0 border-2 border-surface-300 dark:border-surface-600 group-hover:border-transparent rounded-full transition-colors"></span>
              <span class="relative text-surface-700 dark:text-surface-300 group-hover:text-white transition-colors">
                {label}
              </span>
            </a>
          ))}
        </div>
      )}
    </div>
  </div>

  <!-- Bottom separator -->
  <div class="h-px bg-gradient-to-r from-transparent via-surface-300 dark:via-surface-700 to-transparent"></div>
</header>
