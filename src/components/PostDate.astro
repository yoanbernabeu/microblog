---
import { formatPostDate, formatDatetime } from '@lib/posts';

interface Props {
  date: Date;
}

const { date } = Astro.props;
const displayDate = formatPostDate(date);
const datetime = formatDatetime(date);
---

<time
  datetime={datetime}
  class="inline-flex items-center gap-1.5 text-sm text-surface-500 dark:text-surface-400 font-mono"
  title={date.toLocaleString('fr-FR', {
    dateStyle: 'full',
    timeStyle: 'short'
  })}
>
  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
  </svg>
  <span>{displayDate}</span>
</time>
