---
import { cleanUrlForDisplay, fetchOGMetadata } from '@lib/utils';

interface Props {
  url: string;
}

const { url } = Astro.props;
const displayUrl = cleanUrlForDisplay(url);
const og = await fetchOGMetadata(url);
const hasRichPreview = og.title || og.image;
---

{hasRichPreview ? (
  <a
    href={url}
    target="_blank"
    rel="noopener noreferrer"
    class="mt-4 block max-w-full rounded-xl border border-surface-200 dark:border-surface-800 overflow-hidden hover:border-primary-500/50 dark:hover:border-primary-500/50 transition-all duration-300 group hover:shadow-lg hover:shadow-primary-500/10"
  >
    {og.image && (
      <div class="relative aspect-[1.91/1] overflow-hidden bg-surface-100 dark:bg-surface-800">
        <img
          src={og.image}
          alt={og.title || 'AperÃ§u du lien'}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
          loading="lazy"
          onerror="this.parentElement.style.display='none'"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      </div>
    )}
    <div class="p-4 bg-white dark:bg-surface-900">
      {og.title && (
        <h3 class="font-semibold text-surface-900 dark:text-white line-clamp-2 group-hover:text-primary-500 transition-colors">
          {og.title}
        </h3>
      )}
      {og.description && (
        <p class="mt-1 text-sm text-surface-500 dark:text-surface-400 line-clamp-2">
          {og.description}
        </p>
      )}
      <div class="mt-3 flex items-center gap-2 text-xs text-surface-400 dark:text-surface-500">
        {og.favicon && (
          <img
            src={og.favicon}
            alt=""
            class="w-4 h-4 rounded"
            loading="lazy"
            onerror="this.style.display='none'"
          />
        )}
        <span class="truncate">{og.siteName || displayUrl}</span>
        <svg class="w-3 h-3 flex-shrink-0 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </div>
    </div>
  </a>
) : (
  <a
    href={url}
    target="_blank"
    rel="noopener noreferrer"
    class="mt-4 block max-w-full rounded-xl border border-surface-200 dark:border-surface-800 overflow-hidden hover:border-primary-500/30 dark:hover:border-primary-500/30 transition-all duration-300 group hover:shadow-glow"
  >
    <div class="p-4 bg-surface-50 dark:bg-surface-800/50">
      <div class="flex items-center gap-2 text-sm text-surface-500 dark:text-surface-400">
        <div class="w-8 h-8 rounded-lg bg-primary-500/10 flex items-center justify-center flex-shrink-0">
          <svg class="w-4 h-4 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
          </svg>
        </div>
        <span class="truncate font-mono text-xs group-hover:text-primary-500 dark:group-hover:text-primary-400 transition-colors">
          {displayUrl}
        </span>
        <svg class="w-4 h-4 flex-shrink-0 opacity-0 group-hover:opacity-100 transform group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-all duration-200 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </div>
    </div>
  </a>
)}
